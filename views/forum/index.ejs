<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Jake's Forum</title>

  <!-- Application Styles -->
  <link rel="stylesheet" href="/css/style.css" />

  <!-- jQuery -->
  <script src="/vendor/jquery/jquery.min.js"></script>

  <!-- Application JS -->
  <script src="/js/app.js"></script>
</head>
<body>

  <div class="top-bar">
    <h1>Jake's Forum</h1>
    <h3>Welcome to my forum, feel free to start a new discussion or add on to existing ones!</h3>
  </div>
  <div class="new-topic">
    <a href="/forum/new">+ Start a new topic</a>
  </div>
  <div class="container">
    <div class="row">
      <h2>Current Topics</h2>
      <% topics.forEach((topic) => { %>
        <h1><a href="/forum/<%= topic.id %>"><%= topic.title %></a></h1>
        <% }); %>
      </div>
    </div>

  </body>
  </html>
