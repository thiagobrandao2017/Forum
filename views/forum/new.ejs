<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Jake's Forum</title>

  <!-- Application Styles -->
  <link rel="stylesheet" href="/css/style.css" />

  <!-- jQuery -->
  <script src="/vendor/jquery/jquery.min.js"></script>

  <!-- Application JS -->
  <script src="/js/app.js"></script>
</head>
<body>

  <!-- Bootsnip -->
  <form class="form-horizontal" method="POST" action="/forum">
    <fieldset>

      <!-- Form Name -->
      <legend>New Topic</legend>

      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label" for="title">Topic Title</label>
        <div class="col-md-5">
          <input id="title" name="topic[title]" type="text" placeholder="Enter the title of your topic" class="form-control input-md">

        </div>
      </div>

      <!-- Textarea -->
      <div class="form-group">
        <label class="col-md-4 control-label" for="description">Description</label>
        <div class="col-md-4">
          <textarea class="form-control" id="description" name="topic[description]">Enter your question!</textarea>
        </div>
      </div>

      <!-- Button -->
      <div class="form-group">
        <label class="col-md-4 control-label" for="submitButton"></label>
        <div class="col-md-4">
          <button id="submitButton" name="submitButton" class="btn btn-primary">Submit Topic</button>
        </div>
      </div>
    </body>
    </html>
