<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Jake's Forum</title>

  <!-- Application Styles -->
  <link rel="stylesheet" href="/css/style.css" />

  <!-- jQuery -->
  <script src="/vendor/jquery/jquery.min.js"></script>

  <!-- Application JS -->
  <script src="/js/app.js"></script>
</head>
<body>

  <div class="top-bar">
    <h1><%= topic.title %></h1>
    <h3><%= topic.description %></h3>
  </div>

  <div class="container">
    <div class="row">
      <h2>Current Comments</h2>
      <% comments.forEach((comment) => { %>
        <p><%= comment.user_comment %></p>
        <% }); %>
      </div>
    </div>

    <form class="form-horizontal"  method="POST" action="/:id">
    <fieldset>

    <!-- Form Name -->
    <legend>Add a comment</legend>

    <!-- Textarea -->
    <div class="form-group">
      <label class="col-md-4 control-label" for=""></label>
      <div class="col-md-4">
        <textarea class="form-control" id="" name="comment[user_comment]"></textarea>
      </div>
    </div>

    <!-- Button -->
    <div class="form-group">
      <label class="col-md-4 control-label" for="singlebutton"></label>
      <div class="col-md-4">
        <button id="singlebutton" name="singlebutton" class="btn btn-primary">+ Add Comment</button>
      </div>
    </div>

    </fieldset>
    </form>


  </body>
  </html>
